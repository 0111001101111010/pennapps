<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/change_pin_padding" >
    
    <EditText
        android:id="@+id/enterPin"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="@dimen/change_pin_edit_text_margin"
        android:inputType="numberPassword"
        android:textSize="@dimen/pin_text_size"
        android:hint="@string/enter_pin_hint"
        />
    
    <EditText
        android:id="@+id/confirmPin"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="numberPassword"
        android:textSize="@dimen/pin_text_size"
        android:hint="@string/confirm_pin_hint"
        />

</LinearLayout>
